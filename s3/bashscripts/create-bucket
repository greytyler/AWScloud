!# /usr/bin/env bash
#configure file permissions on bash terminal
#chmod u+x s3/bashscripts/*
#ls -la s3/bashscripts/


# check for bucket name

if [-z "$1" ]; then
    echo "There to be a bucket name eg. ./bucket my-bucket-name"
    exit 1
fi 

BUCKET_NAME=$1

aws s3api create-bucket \
--bucket BUCKET_NAME \
--create-bucket-configuration="LocationConstraint=af-south-1"